@model CET322_HW1_Books.Models.Book

<!DOCTYPE html>
<html>
<head>
    
    <style>
        .status-green {
            background-color: green;
            color: white;
        }

        .status-yellow {
            background-color: yellow;
            color: black;
        }

        .status-red {
            background-color: red;
            color: white;
        }

        table {
            width: 50%;
            margin: auto;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    
    <table>
        <tr>
            <th>Property</th>
            <th>Value</th>
        </tr>
        <tr>
            <td>Name</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Author</td>
            <td>@Model.Author</td>
        </tr>
        <tr>
            <td>Page Number</td>
            <td>@Model.PageNumber</td>
        </tr>
        <tr>
            <td>Due Date</td>
            <td>@Model.DueDate.ToString("dd MMM yyyy")</td>
        </tr>
        <tr>
            <td>Days Remaining</td>
            <td class="status-@Model.GetDueDateStatus()">@Model.DaysRemaining()</td>
        </tr>
    </table>
</body>
</html>
